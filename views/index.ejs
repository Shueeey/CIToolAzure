    init() {
      this.columns.forEach(column => {
        const contentEl = document.getElementById(column.content);
        const scrollbarEl = document.getElementById(column.scrollbar);
        const thumbEl = document.getElementById(column.thumb);

        if (!contentEl || !scrollbarEl || !thumbEl) return;

        // Add scroll event listener
        contentEl.addEventListener('scroll', () => {
          this.updateScrollbar(contentEl, scrollbarEl, thumbEl);
        });

        // Add resize observer for dynamic content
        if (window.ResizeObserver) {
          const resizeObserver = new ResizeObserver(() => {
            this.updateScrollbar(contentEl, scrollbarEl, thumbEl);
          });
          resizeObserver.observe(contentEl);
        }

        // Initial update
        setTimeout(() => {
          this.updateScrollbar(contentEl, scrollbarEl, thumbEl);
        }, 100);
      });
    }

    updateScrollbar(contentEl, scrollbarEl, thumbEl) {
      const scrollHeight = contentEl.scrollHeight;
      const clientHeight = contentEl.clientHeight;
      const scrollTop = contentEl.scrollTop;

      // Hide scrollbar if content doesn't overflow
      if (scrollHeight <= clientHeight) {
        scrollbarEl.classList.remove('visible');
        return;
      }

      // Show scrollbar
      scrollbarEl.classList.add('visible');

      // Calculate thumb size (proportional to visible content)
      const thumbHeightRatio = clientHeight / scrollHeight;
      const scrollbarHeight = clientHeight;
      const thumbHeight = Math.max(20, thumbHeightRatio * scrollbarHeight);

      // Calculate thumb position (proportional to scroll position)
      const maxScrollTop = scrollHeight - clientHeight;
      const scrollRatio = scrollTop / maxScrollTop;
      const maxThumbTop = scrollbarHeight - thumbHeight;
      const thumbTop = scrollRatio * maxThumbTop;

      // Update thumb styles
      thumbEl.style.height = `${thumbHeight}px`;
      thumbEl.style.top = `${thumbTop}px`;

      // Debug logging for first column
      if (contentEl.id === 'newColumn' && scrollTop === 0) {
